{
  "name": "sjsitapp",
  "version": "1.0.0",
  "main": "app.js",
  "description": "An application for the San Jose Sharks Ice Team.",
  "repository": "https://github.com/mattcarlotta/SJITApp",
  "author": "Matt Carlotta",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">=8",
    "npm": ">=3"
  },
  "scripts": {
    "dev": "better-npm-run dev",
    "initialize": "yarn install && cd client && yarn install && cd ..",
    "start": "better-npm-run start",
    "server": "better-npm-run server",
    "client": "npm run dev --prefix client",
    "build": "npm run build --prefix client",
    "lint": "npm run lint-front --silent && npm run lint-back --silent",
    "lint:front": "npm run pre-commit --prefix client",
    "lint:back": "lint-staged",
    "test": "better-npm-run test",
    "test:front": "npm run test --prefix client",
    "test:frontcov": "npm run test:coverage --prefix client"
  },
  "betterScripts": {
    "dev": {
      "command": "concurrently \"better-npm-run server\" \"npm run client\"",
      "env": {
        "HOST": "http://localhost:",
        "CLIENT": "http://localhost:3000",
        "DATABASE": "sjsitapp-dev-db",
        "NODE_ENV": "development",
        "APIPORT": 5000
      }
    },
    "start": {
      "command": "node app.js",
      "env": {
        "HOST": "http://localhost:",
        "CLIENT": "http://example.com",
        "DATABASE": "sjsitapp-prod-db",
        "NODE_ENV": "production",
        "APIPORT": 8080
      }
    },
    "server": {
      "command": "nodemon ./app.js",
      "env": {
        "HOST": "http://localhost:",
        "CLIENT": "http://localhost:3000",
        "DATABASE": "sjsitapp-dev-db",
        "NODE_ENV": "development",
        "APIPORT": 5000
      }
    },
    "test": {
      "command": "jest --config ./jest.json --passWithNoTests --watchAll",
      "env": {
        "CLIENT": "http://localhost:5001",
        "DATABASE": "sjsitapp-test-db",
        "NODE_ENV": "testing",
        "WATCHING": "true",
        "APIPORT": 5001
      }
    },
    "testall": {
      "command": "jest --config ./jest.json --findRelatedTests",
      "env": {
        "CLIENT": "http://localhost:5001",
        "DATABASE": "sjsitapp-test-db",
        "NODE_ENV": "testing",
        "WATCHING": "false",
        "COMMITTING": "true",
        "APIPORT": 5001
      }
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "better-npm-run testall",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint:front --silent && npm run lint:back --silent"
    }
  },
  "dependencies": {
    "@babel/core": "^7.5.4",
    "@babel/preset-env": "^7.5.4",
    "@babel/register": "^7.4.4",
    "@sendgrid/mail": "^6.4.0",
    "babel-plugin-module-resolver": "^3.2.0",
    "bcryptjs": "^2.4.3",
    "better-npm-run": "^0.1.1",
    "bluebird": "^3.5.5",
    "body-parser": "^1.19.0",
    "chalk": "^2.4.2",
    "concurrently": "^4.1.1",
    "connect-redis": "^3.4.1",
    "cors": "^2.8.5",
    "eslint-config-airbnb-base": "^13.2.0",
    "eslint-plugin-import": "^2.18.0",
    "express": "^4.17.1",
    "express-session": "^1.16.2",
    "lodash": "^4.17.14",
    "moment": "^2.24.0",
    "mongoose": "^5.6.4",
    "morgan": "^1.9.1",
    "nodemon": "^1.19.1",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "prettier": "^1.18.2",
    "react-dev-utils": "^9.0.1",
    "supertest": "^4.0.2"
  },
  "devDependencies": {
    "babel-jest": "^24.8.0",
    "eslint": "^5.14.1",
    "eslint-import-resolver-babel-module": "^5.0.1",
    "eslint-plugin-prettier": "^3.1.0",
    "husky": "^3.0.0",
    "jest": "^24.8.0",
    "lint-staged": "^9.2.0"
  }
}
